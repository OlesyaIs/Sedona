{
  "name": "sedona",
  "private": true,
  "description": "Личный проект «Sedona» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^2.0.5",
    "autoprefixer": "10.2.5",
    "browser-sync": "^2.29.3",
    "del": "6.0.0",
    "gulp": "4.0.2",
    "gulp-htmlmin": "5.0.1",
    "gulp-imagemin": "7.1.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.0",
    "gulp-rename": "2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-svgstore": "7.0.1",
    "gulp-terser": "^2.1.0",
    "gulp-webp": "4.0.1",
    "postcss": "^8.4.29",
    "postcss-csso": "5.0.1",
    "sass": "^1.67.0",
    "stylelint": "13.12.0",
    "stylelint-config-htmlacademy": "0.1.4"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": "^12 || ^14"
  }
}
